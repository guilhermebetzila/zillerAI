{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // 🔍 Define o diretório base
    "baseUrl": ".",

    // 🚀 Mapeia os atalhos (aliases) para facilitar imports
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["app/components/*"],
      "@hooks/*": ["app/hooks/*"],
      "@ui/*": ["app/components/ui/*"],
      "@lib/*": ["app/lib/*", "lib/*"],
      "@api/*": ["app/api/*"]
    }
  },

  // 🧩 Inclui todos os arquivos relevantes do projeto
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  // 🚫 Ignora dependências externas
  "exclude": ["node_modules"]
}

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@app/*": ["app/*"],
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@hooks/*": ["app/hooks/*"],
      "@context/*": ["app/hooks/context/*"],
      "@ui/*": ["components/ui/*"]
    },
    "typeRoots": [
      "./types",
      "./components/ui",   // ✅ Adiciona aqui para garantir que toast.d.ts seja encontrado
      "./node_modules/@types"
    ],
    "plugins": [
      { "name": "next" }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "server.ts",
    "types/**/*.d.ts",
    ".next/types/**/*.ts",
    "components/ui/**/*.d.ts"   // ✅ Inclui arquivos de tipo dentro de ui
  ],
  "exclude": [
    "node_modules",
    ".next",
    "prisma/seed.ts"
  ]
}
